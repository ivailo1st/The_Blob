<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_Blob</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" type="text/css" href="~/css/main.css" />
    


</head>

<body class="body" onload="ifAsleep()">

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @if (ViewData["Title"] == "Main Index")
    {
        <script src="~/js/scripts/character.js"></script>
        <script src="~/js/scripts/bars.js"></script>
        <script src="~/js/scripts/store.js"></script>
        <script src="~/js/scripts/fridge.js"></script>
        <script src="~/js/scripts/fun.js"></script>
        <script src="https://smtpjs.com/v3/smtp.js">
        </script>

    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
